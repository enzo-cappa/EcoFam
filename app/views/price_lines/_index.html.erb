<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title">Precios por producto y marca</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-1">
          <h5><p class="text-right">Marca</p></h5>
        </div>
        <div class="col-md-3">
          <%= form_tag({controller: "price_lines", action: "index"}, method: "get", id: 'brand_form', remote: true) do %>
          <%= hidden_field_tag(:product_id, @product.id) %>
          <%= collection_select(:brand, :id, @brands, :id, :name) %>
          <% end %>
        </div>
        <div class="col-md-8"></div>
      </div>
      <div class="row">
        <div class="col-md-12" id="chart">
          <div id="chart"></div>
        </div>
      </div>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

