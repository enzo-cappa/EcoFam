<div class="row" style="margin-bottom: 20px;">
  <div class="col-sm-offset-4 col-sm-4">
    <h2>Ingreso</h2>
  </div>
  <div class="col-sm-4">
    </div>
</div>
<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <%= f.input :email, input_html: {autofocus: true} %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, as: :boolean, wrapper: :horizontal_boolean %>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit, "Ingresar" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
