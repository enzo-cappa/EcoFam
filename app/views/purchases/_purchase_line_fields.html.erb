<div class="row product-line">
  <%= f.hidden_field :id %>
  <div class="col-md-2">
    <%= f.text_field :quantity, placeholder: "Cantidad",  autocomplete: "off", class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.simple_fields_for :product do |product_form| %>
      <%= product_form.text_field :name, placeholder: "Producto", "data-provide" => "typeahead", "data-source" => @products.to_json, autocomplete: "off", class: "form-control" %>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= f.simple_fields_for :brand do |brand_form| %>
      <%= brand_form.text_field :name, placeholder: "Marca",  "data-provide" => "typeahead", "data-source" => @brands.to_json, autocomplete: "off", class: "form-control" %>
    <% end %>
  </div>  
  <div class="col-md-2">
    <%= f.text_field :price, placeholder: "Precio", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="col-md-1">
    <%= f.link_to_remove "-", class: "btn btn-danger"  %>
  </div>
</div>
