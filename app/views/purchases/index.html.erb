<div class="page-header">
  <h1>Compras</h1>
  <h3><%= I18n.t("date.month_names")[@period.month] %> de <%= @period.year %></h3>
</div>
<div class="modal hide crud-modal" id="crud_modal"></div>
<table class="table table-striped table-condensed" id="purchases">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Mercado</th>
      <th>Monto</th>
      <th/>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => 'purchase', :collection => @purchases) %>
  </tbody>
</table>

<%= render 'monthly_navbar', model_name: 'purchase' %>

<script type="text/javascript">
  var period= { year : <%= @period.year %>,
                month: <%= @period.month %>};
</script>
