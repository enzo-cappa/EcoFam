<%= render 'monthly_navbar', model_name: 'purchase' %>

<div class="page-header">
  <h1>Compras</h1>
  <h3><%= l @period_date, :format => '%B de %Y' %></h3>
</div>
<div class="modal hide crud-modal" id="crud_modal"></div>
<table class="table table-striped table-condensed" id="purchases">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Mercado</th>
      <th>Monto</th>
      <th/>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => 'purchase', :collection => @purchases) %>
  </tbody>
</table>
<br />

<div class="btn-group">
	<%= link_to 'Nuevo compra', new_purchase_path, :class => "btn", :remote => true %>
</div>

