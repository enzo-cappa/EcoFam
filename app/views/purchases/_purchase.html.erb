<tr id="<%= dom_id purchase %>">
  <td><%= l purchase.purchase_date, format: "%A %d" %></td>
  <td><%= purchase.market.name %></td>
  <td><%= number_to_currency(purchase.total, :unit => "$") %></td>
  <td>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"> Acci&oacute;n <span class="caret"></span> </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'Editar', edit_purchase_path(purchase), :remote => true %></li>
	<li><%= link_to 'Eliminar', purchase, data: {confirm: '¿Está seguro?'}, :method => :delete, :remote => true %></li>
        </ul>
    </div>
  </td>
</tr>
