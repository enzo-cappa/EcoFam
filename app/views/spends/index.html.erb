<%= form_tag spends_path, :method => 'get', :class => "form-inline" do %>
<%= select_date @period_date, :prefix => :period, :order => [:month, :year]  %>
<%= submit_tag "Cambiar" %>
<% end %>
<ul class="pager">
	<li class="previous">
		<%= link_to raw('&larr; Anterior'), spends_path, :period => @prev_period %>
	</li>
	<li class="next">
		<%= link_to raw('Siguiente &rarr;'), spends_path, :period => @next_period %>
	</li>
</ul>
<div class="page-header">
	<h1>Lista de gastos</h1>
</div>
<div class="modal hide" id="crud_modal"></div>
<table class="table table-striped table-condensed" id="spends">
	<thead>
		<tr>
			<th>Fecha</th>
			<th>T&iacute;tulo</th>
			<th>Monto</th>
			<th>Marcas</th>
			<th/>
		</tr>
	</thead>
	<tbody>
		<% @spends.each_with_index do |spend, i| %>
		<%= render(:partial => spend) %>
		<% end %>
	</tbody>
	<tfoot style="font-weight: bold;">
		<tr>
			<td colspan="2" style="text-align: right;">Monto final</td>
			<td colspan="2"><%= number_to_currency(@sum, :unit => "$") %> </td>
			<td/>
		</tr>
	</tfoot>
</table>
<div class="btn-group">
	<%= link_to 'Nuevo gasto', new_spend_path, :class => "btn", :remote => true %>
</div>
