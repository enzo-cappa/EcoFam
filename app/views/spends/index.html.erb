<%= form_tag spends_path, :method => 'get', :class => "form-inline" do %>
<%= select_date @period_date, :prefix => :period, :order => [:month, :year]  %>
<%= submit_tag "Cambiar" %>
<% end %>
<div class="page-header">
	<h1>Lista de gastos</h1>
</div>
<div class="modal hide" id="crud_modal"></div>
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Fecha</th>
			<th>T&iacute;tulo</th>
			<th>Monto</th>
			<th>Marcas</th>
			<th/>
		</tr>
	</thead>
	<tbody>
		<% @spends.each_with_index do |spend, i| %>
		<tr>
			<td><%= spend.spend_date %></td>
			<td><%= spend.titulo %></td>
			<td><%= number_to_currency(spend.ammount, :unit => "$") %></td>
			<td><%= raw(to_tags_links_listing(spend.tags)) %></td>
			<td>
			<div class="btn-group">
				<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"> Action <span class="caret"></span> </a>
				<ul class="dropdown-menu">
					<%= link_to 'Editar', edit_spend_path(spend) %>
					<%= link_to 'Eliminar', spend, :confirm => 'Are you sure?', :method => :delete %>
				</ul>
			</div>
		</tr>
		<% end %>
	</tbody>
	<tfoot style="font-weight: bold;">
		<tr>
			<td colspan="2" style="text-align: right;">Monto final</td>
			<td colspan="2"><%= number_to_currency(@sum, :unit => "$") %> </td>
			<td/>
		</tr>
	</tfoot>
</table>
<div class="btn-group">
	<%= link_to 'Nuevo gasto', new_spend_path, :class => "btn", :remote => true %>
</div>
