<tr id="<%= dom_id spend %>" >
  <td><%= l spend.spend_date, format: "%A %d" %></td>
  <td><%= spend.titulo %></td>
  <td><%= number_to_currency(spend.amount, :unit => "$") %></td>
  <td><%= raw(to_tags_links_listing(spend.tags)) %></td>
  <td>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        Acci&oacute;n <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'Editar', edit_spend_path(spend, month: @period.month, year: @period.year), :remote => true  %></li>
        <li><%= link_to 'Eliminar', spend, data: {confirm: '¿Está seguro?'}, :method => :delete, :remote => true %></li>
        </ul>
    </div>
  </td>
</tr>
